<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/grad_bg"
    tools:context="com.example.e_biro.MainActivity">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="371dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="667dp"
        android:background="@drawable/et_bg"
        android:fontFamily="sans-serif-light"
        android:prompt="@drawable/ic_launcher_background"
        android:textColor="#212E77"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="629dp"
        android:fontFamily="sans-serif-medium"
        android:text="Email adresa primaoca"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etTo"
        android:layout_width="355dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="589dp"
        android:background="@drawable/et_bg"
        android:fontFamily="sans-serif-light"
        android:hint="e-mail adressa"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/ab"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="541dp"
        android:fontFamily="sans-serif-medium"
        android:text="Upišite naslov poruke"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etSubject"
        android:layout_width="355dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="508dp"
        android:background="@drawable/et_bg"
        android:fontFamily="sans-serif-light"
        android:hint="Naslov"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/etMessage"

        android:layout_width="wrap_content"
        android:layout_height="159dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="342dp"
        android:background="@drawable/et_bg"
        android:fontFamily="sans-serif-light"
        android:gravity="top|start"
        android:hint="Sadržaj poruke"

        android:inputType="textMultiLine"

        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="102dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="230dp"
        android:textAlignment="center">

        <Button
            android:id="@+id/btSend"

            android:layout_width="328dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:singleLine="true"
            android:text="Pošalji"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btAttachment"


            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="65dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Zakači fajl"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvAttachment"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="110dp"
        android:visibility="gone"
        android:drawableStart="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/imageView4"

        android:layout_width="97dp"
        android:layout_height="77dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="-8dp"
        app:srcCompat="@drawable/aaa" />


</RelativeLayout>